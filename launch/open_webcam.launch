<launch>
  <!-- Set this to your camera's name -->
  <arg name="camera_name" value="logitech_cam" />

  <!-- Start the GSCAM node -->
<!--<env name="GSCAM_CONFIG" value="v4l2src device=/dev/video1 ! video/x-raw-yuv,framerate=30/1,width=1280,height=720 ! ffmpegcolorspace" /> -->
  <env name="GSCAM_CONFIG" value="v4l2src device=/dev/video1 ! video/x-raw-yuv,framerate=30/1,width=640,height=480 ! ffmpegcolorspace " />

  <node pkg="gscam" type="gscam" name="$(arg camera_name)" output="screen">
    <param name="camera_info_url" value="package://hardware_bridge/calibrations/logitech_cam.yaml" />
    <param name="camera_name" value="$(arg camera_name)" />

    <remap from="camera/image_raw" to="$(arg camera_name)/image_raw"/>
    <remap from="/set_camera_info" to="$(arg camera_name)/set_camera_info"/>
  </node>

  <!-- View the raw output -->
  <node pkg="image_view" type="image_view" name="$(arg camera_name)_view">
    <remap from="image" to="/$(arg camera_name)/image_raw"/>
  </node>
    
</launch>

