<launch>
  <group ns="logitech_cam">
    <arg name="camera_name" value="logitech_cam" />
    
    <node pkg="libuvc_camera" type="camera_node" name="camera">
      <!-- Parameters used to find the camera -->
      <param name="vendor" value="0x046d"/>
      <param name="product" value="0x0"/>
      <param name="serial" value=""/>
      <!-- If the above parameters aren't unique, choose the first match: -->
      <param name="index" value="0"/>

      <!-- Image size and type -->
      <param name="width" value="640"/>
      <param name="height" value="480"/>
      <!-- choose whichever uncompressed format the camera supports: -->
      <param name="video_mode" value="uncompressed"/> <!-- or yuyv/nv12/jpeg -->
      <param name="frame_rate" value="30"/>

      <param name="timestamp_method" value="start"/> <!-- start of frame -->
      <param name="camera_info_url" value="package://hardware_bridge/calibrations/logitech_cam.yaml"/>

      <param name="auto_exposure" value="3"/> <!-- use aperture_priority auto exposure -->
      <param name="auto_white_balance" value="false"/>
    </node>

    <!-- View the raw output -->
    <node pkg="image_view" type="image_view" name="image_view">
      <remap from="image" to="/$(arg camera_name)/image_raw"/>
    </node>
  </group>

    
</launch>

